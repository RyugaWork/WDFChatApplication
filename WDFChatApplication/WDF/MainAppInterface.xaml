<Window x:Class="WDFChatApplication.WDF.MainAppInterface"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WDFChatApplication" xmlns:viewmodel="clr-namespace:WDFChatApplication.WDF"
        mc:Ignorable="d"
        Title="Window" Height="450" Width="800">

    <Window.DataContext>
        <viewmodel:MainAppInterfaceModel />
    </Window.DataContext>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <DockPanel Grid.Column="0">
            <StackPanel DockPanel.Dock="Top">
                <TextBox Height="25" 
                    Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}"/>
                <Button Height="25" 
                    Content="Connect" 
                    Command="{Binding ConnectCommand}"/>
                <Button Height="25" 
                    Content="Disconnect" 
                    Command="{Binding DisconnectCommand}" />
            </StackPanel>
        </DockPanel>
        <DockPanel Grid.Column="1" Margin="5">

            <!-- Bottom: Input row -->
            <DockPanel DockPanel.Dock="Bottom" Height="30" LastChildFill="True" Margin="0,0,0,5">
                <!-- Send Button on the right -->
                <Button Content="Send"
                Width="60"
                DockPanel.Dock="Right"
                Command="{Binding SendCommand}" />

                <!-- Text input fills remaining space -->
                <TextBox Text="{Binding Message, UpdateSourceTrigger=PropertyChanged}"
                 VerticalAlignment="Center"
                 Margin="0,0,5,0"/>
            </DockPanel>

            <!-- Top: Scrollable messages -->
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <ItemsControl ItemsSource="{Binding Messages}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" Margin="5">
                                <!-- Time on the left -->
                                <TextBlock Text="{Binding timestamp, StringFormat='{}{0:HH:mm}'}"
                                   Foreground="Gray"
                                   Width="50"
                                   Margin="0,0,10,0" />

                                <!-- Message text -->
                                <TextBlock Text="{Binding sender}" TextWrapping="Wrap" 
                                   Width="50"
                                   Margin="0,0,10,0"/>
                                <!-- Message text -->
                                <TextBlock Text="{Binding text}" TextWrapping="Wrap" />
                            </StackPanel>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </DockPanel>

    </Grid>
</Window>
